# Test Environment Configuration
NODE_ENV=test

# Database
DATABASE_URL="postgresql://test:test@localhost:5432/chemchat_test"

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=1
REDIS_PASSWORD=

# JWT
JWT_SECRET=test-jwt-secret-key-for-testing-only
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d
JWT_WS_EXPIRES_IN=1h

# Encryption
ENCRYPTION_KEY=test-encryption-key-32-chars-long

# External Services (Mock endpoints for testing)
ELASTICSEARCH_URL=http://localhost:9200
KAFKA_BROKERS=localhost:9092

# AWS S3 (Use MinIO for testing)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=minioadmin
AWS_SECRET_ACCESS_KEY=minioadmin
S3_BUCKET=chemchat-test
S3_ENDPOINT=http://localhost:9000

# Email (Use Ethereal for testing)
SMTP_HOST=smtp.ethereal.email
SMTP_PORT=587
SMTP_USER=test@ethereal.email
SMTP_PASS=test-password

# Firebase (Mock for testing)
FIREBASE_PROJECT_ID=chemchat-test
FIREBASE_PRIVATE_KEY=test-private-key
FIREBASE_CLIENT_EMAIL=test@chemchat-test.iam.gserviceaccount.com

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_LIMIT=100

# Security
BCRYPT_ROUNDS=4
MFA_ISSUER=ChemChat-Test
SECURITY_MONITORING_ENABLED=true

# Observability
JAEGER_ENDPOINT=http://localhost:14268/api/traces
PROMETHEUS_PORT=9090
METRICS_ENABLED=true
TRACING_ENABLED=true

# Testing specific
TEST_TIMEOUT=30000
TEST_DB_RESET=true
MOCK_EXTERNAL_SERVICES=true
