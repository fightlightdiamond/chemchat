{
  "name": "chat-system-mongodb",
  "version": "1.0.0",
  "description": "Chat system with MongoDB read database and PostgreSQL write database",
  "main": "dist/main.mongodb.js",
  "scripts": {
    "start:mongodb": "node dist/main.mongodb.js",
    "start:dev:mongodb": "nest start --watch --entryFile main.mongodb",
    "build:mongodb": "nest build --webpack --webpackPath webpack.config.js",
    "test:mongodb": "jest --config jest.config.js",
    "test:e2e:mongodb": "jest --config jest-e2e.config.js"
  },
  "dependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/config": "^3.0.0",
    "@nestjs/swagger": "^7.0.0",
    "@nestjs/schedule": "^4.0.0",
    "@nestjs/event-emitter": "^2.0.0",
    "@nestjs/cqrs": "^10.0.0",
    "@nestjs/websockets": "^10.0.0",
    "@nestjs/platform-socket.io": "^10.0.0",
    "mongodb": "^6.0.0",
    "ioredis": "^5.3.0",
    "socket.io": "^4.7.0",
    "class-validator": "^0.14.0",
    "class-transformer": "^0.5.1",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.0"
  }
}