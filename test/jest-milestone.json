{
  "displayName": "Milestone Tests",
  "testMatch": ["**/test/milestone/**/*.spec.ts"],
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "../",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "transformIgnorePatterns": [
    "node_modules/(?!uuid)"
  ],
  "collectCoverageFrom": [
    "src/**/*.(t|j)s"
  ],
  "coverageDirectory": "coverage/milestone",
  "testEnvironment": "node",
  "setupFilesAfterEnv": ["<rootDir>/test/setup.ts"],
  "testTimeout": 60000,
  "verbose": true
}
